<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Atrativo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <main>
        <h2> Atualizar Atrativo</h2>
        <section id="alteratrativos">
            <form id="form-atrativo">
                <!-- Iniciando primeira -->
                <div class="row">
                    <label for="txtid" class="form-label">Id Atrativo</label>
                    <input value="<%= atrativo.id %>" aria-hidden="true" type="hidden" id="txtid" name="txtid">
                    <div class="col">                       
                        <label for="txtnomeatrativo" class="form-label" >Nome do atrativo</label>
                        <input value="<%= atrativo.nome %>" type="text" class="form-control" name="txtnomeatrativo" id="txtnomeatrativo" tabindex="1" autofocus>
                    </div>
                   <div class="col">
                        <label for="txtlatatrativo" class="form-label" >Latitude do atrativo</label>
                        <input value="<%= atrativo.latAtrativo %>" type="number" class="form-control" name="txtlatatrativo" id="txtlatatrativo" tabindex="2">
                   </div>
                </div>
                 <!-- Iniciando segunda linha -->
                <div class="row mt-4">
                    <div class="col">
                        
                        <label for="txtlongatrativo" class="form-label" >Longitude do atrativo</label>
                        <input value="<%= atrativo.longAtrativo %>" type="number" class="form-control" name="txtlongatrativo" id="txtlongatrativo" tabindex="3">
                    </div>
                   <div class="col">
                        <label for="txtdescatrativo" class="form-label" >Descrição do atrativo</label>
                        <input value="<%= atrativo.descrição %>" type="text" class="form-control" name="txtdescatrativo" id="txtdescatrativo" tabindex="4">
                   </div>
                </div>
                <div class="col">
                    <label for="txtdescatrativo" class="form-label" >Imagem do atrativo</label>
                    <input value="<%= atrativo.imagem %>" type="file" class="form-control" name="txtdescatrativo" id="txtdescatrativo" tabindex="4">
                    
                </div>
                <div class="row">
                    <a href="/atrativo/lista" onclick="atualizar();">
                        <input type="button" class="btn btn-warning mt-4" value="Cadastrar" name="btcadcupons" id="btcadcupons" tabindex="5">
                    </a>
                </div>
            </form>
        </section>
    </main>

    <script>

document.getElementById("form-atrativo").addEventListener("submit", (e) => {
            e.preventDefault()
            atualizar()
        } )
        async function atualizar(){

            const atrativo = {
                "id": document.getElementById("txtid").value,
                "nome": document.getElementById("txtnomeatrativo").value,
                "latitude": document.getElementById("txtlatatrativo").value,
                "longitude": document.getElementById("txtlongatrativo").value,
                "descricao": document.getElementById("txtdescatrativo").value,
                "imagem": document.getElementById("txtimagematrativo").value
            }

              
            const resposta = await fetch('/atrativo/alterar', { 
                method:'PUT',
                headers: {
                    'Content-Type':'application/json'
                },
                body: JSON.stringify(atrativo)
             })
            const json = await resposta.json()
            const status = await json

            console.log(atrativo)

        }

    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>