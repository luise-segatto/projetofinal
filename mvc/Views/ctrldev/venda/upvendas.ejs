<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar venda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <main>
        <h2> Atualizar venda</h2>
        <section id="altervendas">
            <form id="form-venda">
                <!-- Iniciando primeira -->
                <div class="row">
                    <label for="txtid" class="form-label">Id venda</label>
                    <input value="<%= venda.id %>" aria-hidden="true" type="hidden" id="txtid" name="txtid">
                    <div class="col">                       
                        <label for="txthoravendas" class="form-label" >Hora da venda</label>
                        <input value="<%= venda.hora %>" type="time" class="form-control" name="txthoravendas" id="txthoravendas" tabindex="1" autofocus>
                    </div>
                   <div class="col">
                        <label for="txtdiavendas" class="form-label" >Dia da venda</label>
                        <input value="<%= venda.dia %>" type="date" class="form-control" name="txtdiavendas" id="txtdiavendas" tabindex="2">
                   </div>
                </div>
              
                <div class="row">
                    <a href="/vendas/lista" onclick="atualizar();">
                        <input type="button" class="btn btn-warning mt-4" value="Cadastrar" name="btcadcupons" id="btcadcupons" tabindex="5">
                    </a>
                </div>
            </form>
        </section>
    </main>

    <script>

document.getElementById("form-venda").addEventListener("submit", (e) => {
            e.preventDefault()
            atualizar()
        } )
        async function atualizar(){

            const venda = {
                "id": document.getElementById("txtid").value,
                "hora": document.getElementById("txthoravendas").value,
                "dia": document.getElementById("txtdiavendas").value,
                
            }

              
            const resposta = await fetch('/vendas/alterar', { 
                method:'PUT',
                headers: {
                    'Content-Type':'application/json'
                },
                body: JSON.stringify(venda)
             })
            const json = await resposta.json()
            const status = await json

            console.log(venda)

        }

    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>